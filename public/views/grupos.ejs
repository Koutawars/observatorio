<!DOCTYPE html>
<html lang="es">

<head>
    <meta content="text/html;" http-equiv="content-type" charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/materialize.min.css">
    <link rel="stylesheet" type="text/css" href="/css/tabla.css">
    <title>Grupos</title>
</head>

<body>
    <%- include('nav', {tipo: usuario.tipoUsuario }); %>
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h5>Grupos</h5>
            </div>
            <div class="col s12">
                <table class="highlight responsive-table">
                    <thead>
                        <tr>
                            <th>Numero de grupo</th>
                            <th>Salon</th>
                            <th>Grado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(usuario.grupos) { %>
                            <% for(var i = 0; i < usuario.grupos.length; i++) { %>
                                <tr class="click blue lighten-5" name = "<%= usuario.grupos[i].idgrupo %>">
                                    <td><%= usuario.grupos[i].idgrupo %></td>
                                    <td><%= usuario.grupos[i].salon %></td>
                                    <td><%= usuario.grupos[i].grado %></td>
                                </tr>
                            <% } %>
                        <% } %>
                        <% if(usuario.gruposDemas) { %>
                            <% for(var i = 0; i < usuario.gruposDemas.length; i++) { %>
                                <tr name = "<%= usuario.gruposDemas[i].idgrupo %>">
                                    <td><%= usuario.gruposDemas[i].idgrupo %></td>
                                    <td><%= usuario.gruposDemas[i].salon %></td>
                                    <td><%= usuario.gruposDemas[i].grado %></td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

            <script type="text/javascript" src="/js/jquery.min.js"></script>
            <script type="text/javascript" src="/js/materialize.min.js"></script>
            <script type="text/javascript" src="/js/grupos.js"></script>

</body>

</html>